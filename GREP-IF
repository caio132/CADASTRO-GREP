#!/usr/bin/bash 

clear
read -p "Digite seu nome: " NAME
echo $NAME | grep  -E '^[A-Za-z]{1}';
    if [[  $? -eq 0  ]]; then
        echo "Login Correto"
        else
        echo "Login Incorreto"
    fi
 read -p "Email: " MAIL
echo $MAIL | grep  -E '^[A-Za-z0-9]{1}';
    if [[  $? -eq 0  ]]; then
        echo "Email Correto"
        else
        echo "Email Incorreto"
    fi
 
read -p "Telefone: " FONE 
echo $FONE | grep  -E '^[0-9]{5}';
    if [[  $? -eq 0  ]]; then
        echo "Telefone Correto"
        else
        echo "Telefone Incorreto"
    fi
 
read -p "RG: " GR
echo $GR | grep  -E '^[0-9]';
    if [[  $? -eq 0  ]]; then
        echo "RG Correto"
        else
        echo "RG Incorreto"
    fi
 
read -p "CPF: " PFC
echo $PFC | grep  -E '^[A-Za-z]{1}';
    if [[  $? -eq 0  ]]; then
        echo "CPF Correto"
        else
        echo "CPF Incorreto"
    fi
    
read -p "IP: " PI
echo $PI | grep  -E '^[0-9]';
    if [[  $? -eq 0  ]]; then
        echo "IP Correto"
        else
        echo "IP Incorreto"
    fi
    
read -p "MASCARA: " MASC
echo $MASC | grep  -E '^[0-9]';
    if [[  $? -eq 0  ]]; then
        echo "Mascara Correto"
        else
        echo "Mascara Incorreto"
    fi
    
